{% extends 'layout.twig' %}
{% set active = 'workpage' %}
{% block metaTitleContent %}Test d'embauche{% endblock %}
{% block h1Content %}Test d'embauche{% endblock %}
{% block content %}
<section id="work">
<div id="myCarousel" class="carousel slide panelt">
                <!-- Carousel items -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="row">
                {% for work in works %}
                    {% if loop.index <= 3 %}
                    <div class="col-sm-4">
                        <a href="{{ path('works.show',{ 'id': work.id }) }}">
                            <img src="/img/works/{{ work.image_path }}" class="img-responsive">
                        </a>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
            <!--/row-->
        </div>
        <!--/item-->
        <div class="item">
            <div class="row">
                {% for work in works %}
                    {% if loop.index > 3 %}
                        <div class="col-sm-4">
                            <a href="{{ path('works.show',{ 'id': work.id }) }}">
                                <img src="/img/works/{{ work.image_path }}" class="img-responsive">
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <!--/row-->
        </div>
        <!--/item-->
    </div>
    <!--/carousel-inner--> <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>

    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
    </div>
    <!--/myCarousel-->
</section>
{% endblock %}