<{% block form_row %}
    <div class="form-group">
        <div class="row">
            <label class="col-md-4 control-label">
                {{ form_label(form) }}
            </label>
            <div class="col-md-8">
                <div class="iconed-input">
                    {{ form_widget(form,{'attr' : {'class':'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock form_row %}